<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE weblogic-web-app
  PUBLIC "-//BEA Systems, Inc.//DTD Web Application 8.1//EN"
  "http://www.bea.com/servers/wls810/dtd/weblogic810-web-jar.dtd">

<weblogic-web-app>
	<context-root>/</context-root>
	<container-descriptor>
    <!--force WebLogic's classloader to load classes 
        located in the WEB-INF directory of a web application
        in preference to application or system classes. 
        This is a recommended approach since it only impacts a single web module.-->
		<prefer-web-inf-classes>true</prefer-web-inf-classes>
	</container-descriptor>
</weblogic-web-app>