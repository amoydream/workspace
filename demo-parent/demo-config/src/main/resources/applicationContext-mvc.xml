		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd">
	<mvc:annotation-driven enable-matrix-variables="true"
		validator="validatorFactory" message-codes-resolver="messageCodeResolver" />

	<mvc:resources location="/css/" mapping="/css/**" />
	<mvc:resources location="/javascript/" mapping="/javascript/**" />
	<mvc:resources location="/image/" mapping="/image/**" />

	<!-- <context:component-scan base-package="jason.ss.tao.model" /> -->
	<context:component-scan base-package="jason.ss.tao.*.model.validator" />
	<context:component-scan base-package="jason.ss.tao.*.controller" />

	<bean id="messageCodeResolver" class="org.springframework.validation.DefaultMessageCodesResolver" />

	<bean id="validatorFactory"
		class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean"
		p:validationMessageSource-ref="messageSource"/>

